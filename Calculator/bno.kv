<BoxLayout>:
    id: bno
    spacing: 10

    GridLayout:
        spacing: 10
        rows: 7
        cols: 2

        Label:
            text: "Tech Level"
        Label:
            text: ""

        CheckBox:
            width: 25
            group: "tech"
        Label:
            text: "1"

        CheckBox:
            width: 25
            group: "tech"
        Label:
            text: "2"

        CheckBox:
            width: 25
            group: "tech"
        Label:
            text: "3"

        CheckBox:
            width: 25
            group: "tech"
        Label:
            text: "4"

        CheckBox:
            width: 25
            group: "tech"
        Label:
            text: "5"

        CheckBox:
            width: 25
            group: "tech"
        Label:
            text: "6"

    GridLayout:
        spacing: 10
        rows: 1
        cols: 2
        Label:
            text: "Number of Trains: "
        TextInput:
            id: num_trains
            text: "Hello"
            height: 100

    GridLayout:
        spacing: 10
        rows: 7
        cols: 2

        Label:
            text: "Number of Stops: "
        Label:
            id: num_stops
            text: "7"

        CheckBox:
            width: 25
        Label:
            text: "Chicago"

        CheckBox:
            width: 25
