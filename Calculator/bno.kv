            text: "Detroit"

        CheckBox:
            width: 25
        Label:
            text: "Fort Wayne"

        CheckBox:
            width: 25
        Label:
            text: "Harrisburg"

        CheckBox:
            width: 25
        Label:
            text: "Pittsburgh"

        CheckBox:
            width: 25
        Label:
            text: "Cincinnati"
